---
interface Props {
  title: string;
  company?: string;
  date: string;
  description: string;
  skills?: string[];
}

const { title, company, date, description, skills } = Astro.props;
---

<div class="relative pl-8 pb-8">
  <div class="absolute left-0 top-0 h-full w-[2px] bg-gray-200 dark:bg-gray-700"></div>
  <div class="absolute left-[-5px] top-2 h-3 w-3 rounded-full bg-primary-500"></div>
  
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-2">
      <h3 class="text-lg font-bold text-gray-900 dark:text-white">
        {title}
        {company && <span class="text-primary-600 dark:text-primary-400"> @ {company}</span>}
      </h3>
      <time class="text-sm text-gray-500 dark:text-gray-400 mt-1 sm:mt-0">{date}</time>
    </div>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
    {skills && (
      <div class="flex flex-wrap gap-2">
        {skills.map(skill => (
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm">
            {skill}
          </span>
        ))}
      </div>
    )}
  </div>
</div>