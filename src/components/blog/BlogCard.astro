---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  slug: string;
  image?: string;
}

const { title, excerpt, date, category, slug, image } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
  {image && (
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <div class="flex items-center mb-2">
      <span class="text-sm text-primary-600 dark:text-primary-400">{category}</span>
      <span class="mx-2 text-gray-400">•</span>
      <time class="text-sm text-gray-500 dark:text-gray-400">{date}</time>
    </div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{excerpt}</p>
    <a href={`/blog/${slug}`} class="text-primary-600 dark:text-primary-400 hover:underline">
      Read more →
    </a>
  </div>
</article>