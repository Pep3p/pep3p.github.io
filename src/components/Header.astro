---
const navItems = [
  { href: '/', text: 'Home' },
  { href: '/htb', text: 'HTB Write-ups' },
  { href: '/cv', text: 'CV' },
];
---

<header class="bg-white dark:bg-gray-900 shadow-sm">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-primary-600 dark:text-primary-400">
        Your Name
      </a>
      
      <div class="flex space-x-6">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          >
            {item.text}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>