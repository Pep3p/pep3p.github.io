---
import Layout from '../layouts/Layout.astro';
import WriteupCard from '../components/htb/WriteupCard.astro';

const featuredWriteups = [
  {
    title: "HackTheBox - Keeper",
    difficulty: "Easy",
    summary: "A Linux-based machine featuring ticket system exploitation and password cracking.",
    date: "2024-01-15",
    slug: "keeper"
  }
];
---

<Layout title="Your Name - Cybersecurity Professional">
  <section class="mb-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Hi, I'm Your Name</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        Cybersecurity Professional & Ethical Hacker
      </p>
    </div>
  </section>

  <section class="mb-16">
    <h2 class="text-2xl font-bold mb-6">Featured HTB Write-ups</h2>
    <div class="grid gap-6 md:grid-cols-2">
      {featuredWriteups.map(writeup => (
        <WriteupCard {...writeup} />
      ))}
    </div>
  </section>
</Layout>