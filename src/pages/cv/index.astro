---
import Layout from '../../layouts/Layout.astro';
import TimelineItem from '../../components/cv/TimelineItem.astro';

const experiences = [
  {
    title: "Senior Security Engineer",
    company: "CyberGuard Solutions",
    date: "2022 - Present",
    description: "Leading security assessments and implementing enterprise-wide security solutions. Responsible for conducting penetration testing across cloud infrastructure and web applications. Developed and implemented security frameworks that reduced incident response time by 40%.",
    skills: ["Penetration Testing", "Incident Response", "Security Architecture", "Cloud Security", "Web App Security"]
  },
  {
    title: "Security Analyst",
    company: "SecureNet",
    date: "2020 - 2022",
    description: "Managed security operations and led vulnerability assessments for enterprise clients. Implemented SIEM solutions and developed custom detection rules. Conducted regular security awareness training sessions for staff of 200+ employees.",
    skills: ["Vulnerability Assessment", "SIEM", "Network Security", "Security Awareness Training"]
  },
  {
    title: "Junior Security Consultant",
    company: "CyberDefense Corp",
    date: "2018 - 2020",
    description: "Performed security assessments and vulnerability scanning for clients. Assisted in incident response and malware analysis. Contributed to the development of security policies and procedures.",
    skills: ["Security Assessment", "Malware Analysis", "Policy Development"]
  }
];

const certifications = [
  {
    title: "Offensive Security Certified Professional (OSCP)",
    date: "2021",
    description: "Advanced penetration testing certification with hands-on examination. Demonstrated proficiency in exploitation techniques, privilege escalation, and post-exploitation methodologies."
  },
  {
    title: "Certified Ethical Hacker (CEH)",
    date: "2020",
    description: "Comprehensive ethical hacking and security certification covering various aspects of information security, network security, and penetration testing methodologies."
  },
  {
    title: "CompTIA Security+",
    date: "2019",
    description: "Foundation-level security certification covering network security, compliance and operation security, threats and vulnerabilities, and application, data and host security."
  }
];

const skills = [
  {
    category: "Security Testing",
    items: ["Penetration Testing", "Vulnerability Assessment", "Web Application Security", "Network Security", "API Security"]
  },
  {
    category: "Tools & Technologies",
    items: ["Burp Suite", "Metasploit", "Nmap", "Wireshark", "OWASP ZAP", "Docker", "Git"]
  },
  {
    category: "Programming",
    items: ["Python", "Bash", "PowerShell", "JavaScript", "SQL"]
  },
  {
    category: "Cloud & Infrastructure",
    items: ["AWS", "Azure", "Kubernetes", "Linux", "Windows Server"]
  }
];
---

<Layout title="CV">
  <div class="max-w-4xl mx-auto">
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold mb-4">Professional CV</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
        Cybersecurity Professional with 6+ years of experience in penetration testing and security engineering
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="https://linkedin.com/in/yourusername"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-[#0077B5] text-white px-6 py-3 rounded-lg hover:bg-[#006399] transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          Connect on LinkedIn
        </a>
        <a
          href="/cv.pdf"
          class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          Download CV
        </a>
      </div>
    </div>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Professional Experience</h2>
      <div class="space-y-6">
        {experiences.map(exp => (
          <TimelineItem {...exp} />
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Skills & Technologies</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {skills.map(category => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-bold mb-4">{category.category}</h3>
            <div class="flex flex-wrap gap-2">
              {category.items.map(skill => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold mb-6">Certifications</h2>
      <div class="space-y-6">
        {certifications.map(cert => (
          <TimelineItem {...cert} />
        ))}
      </div>
    </section>
  </div>
</Layout>